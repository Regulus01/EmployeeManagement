@page
@model EmployeeManagement.Pages.Departments.IndexModel

@{
    ViewData["Title"] = "Departamentos";
}

<h1>Departamentos</h1>

<form method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-4">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="ManagerName" class="form-label"></label>
            <input asp-for="ManagerName" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="ParentDepartmentName" class="form-label"></label>
            <input asp-for="ParentDepartmentName" class="form-control" />
        </div>
    </div>
    <div class="row g-2 mt-2">
        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Filtrar</button>
        </div>
    </div>
</form>

<div class="mb-2">
    <a asp-page="/Departments/Create" class="btn btn-success">Novo Departamento</a>
</div>

@if (!Model.Departments.Any())
{
    <div class="alert alert-info">Nenhum departamento encontrado.</div>
}
else
{
    <p>Total: @Model.TotalCount</p>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Gerente</th>
                <th>Departamento Pai</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var d in Model.Departments)
        {
            <tr>
                <td>@d.Nome</td>
                <td>@d.ManagerName</td>
                <td>@d.ParentDepartmentName</td>
                <td>
                    <a asp-page="/Departments/SubDepartments" 
                       asp-route-DepartmentId="@d.Id" 
                       class="btn btn-sm btn-outline-primary">
                        Ver Hierarquia
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}